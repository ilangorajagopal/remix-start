{
	"compilerOptions": {
		"lib": ["ES2019"],
		"target": "ES2019",

		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"strict": false,

		"forceConsistentCasingInFileNames": true,

		"declaration": true,
		"emitDeclarationOnly": true,
		"resolveJsonModule": true,

		"outDir": "./build"
	},
	"include": ["*.ts"],
	"exclude": ["node_modules", "starters"]
}